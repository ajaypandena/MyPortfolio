@model AjayPandenaPortfolio.Models.PortfolioModel

<div class="container mt-5">

    <h1 style="color: darkblue; font-family: Arial; text-align: center;">
        <img src="~/images/AJ.png" alt="AJ" style="width: 50px; height: 50px; border-radius: 50%; margin-right: 10px;" />
        <span class="multi-color-blinking">@Model.Name</span>
        @Model.Surname
    </h1>


    <p style="font-family: Arial; text-align: center;">@Model.Bio</p>
    <p>
        <div style="text-align: center; margin-top: 20px;">
            <a href="https://github.com/ajaypandena" target="_blank" class="btn btn-dark me-2">
                <i class="fab fa-github"></i> 
            </a>
            <a href="https://www.linkedin.com/in/ajay-pandena-907013302/" target="_blank" class="btn btn-primary">
                <i class="fab fa-linkedin"></i> 
            </a>
        </div>

    </p><br />

    <div style="text-align: center; margin-top: 20px;">
        <a href="~/path-to-your-resume/resume.pdf" target="_blank" style="text-decoration: none;">
            <button class="btn btn-outline-primary" style="
            font-weight: bold;
            padding: 10px 25px;
            border-radius: 30px;
            font-size: 1rem;
            box-shadow: 2px 2px 12px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;">
                <i class="fas fa-eye" style="margin-right: 8px;"></i> View Resume
            </button>
        </a>
    </div>
    <br />


   @*  <h2>Skills</h2>
