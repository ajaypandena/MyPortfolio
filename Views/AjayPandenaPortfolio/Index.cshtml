    <h2 style="color: #3366cc; font-weight: bold; text-align: center;"> <i class="fas fa-rocket" style="margin-right: 8px; color: #e67e22;"></i>  Skills</h2>
    <div class="scrolling-text">
        @foreach (var skill in Model.Skills)

        {
            <span style="margin-right: 10px;">
                <i class="fas fa-check-circle" style="color: green;"></i> @skill
            </span>
        }
    </div>
    <br>

    <br>

    <h2 class="section-title" style="color: #3366cc; text-align: center;"> <i class="fas fa-laptop-code" style="margin-right: 8px; color: #e67e22;"></i> Projects</h2>

    <div class="project-list" style="font-size: 0.8em;">
        @foreach (var project in Model.Projects)

        {
            <div class="project-card">
                <p style="font-weight: bold; color: #444; margin-bottom: 6px;">
                    @project.Title
                </p>
                <a href="@project.Url" target="_blank" class="unauthorized-link">
                    <span style="font-weight: normal; color: #666;">@project.Description</span> 🔗 View Project
                </a>
            </div>
        }
    </div>

    <script>
        // Intercept all clicks on links with the 'unauthorized-link' class
        document.querySelectorAll('.unauthorized-link').forEach(function(link) {
            link.addEventListener('click', function(event) {
                event.preventDefault(); // Prevent the default action (opening the link)
                alert('Unauthorized to view this project.');
            });
        });
    </script>




